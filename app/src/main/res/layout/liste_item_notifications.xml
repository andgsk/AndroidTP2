<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:id="@+id/img_notification"
            android:src="@drawable/ic_cast_disabled_light" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_gravity="center_vertical"
                    android:text="@string/txt_nom_notification"
                    android:id="@+id/txtTitreNotifications"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/img_notification"
                    android:layout_toEndOf="@+id/img_notification"
                    android:singleLine="false"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/txt_desc_notification"
                    android:ellipsize="end"
                    android:id="@+id/textView2"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:maxLines="1"
                    android:singleLine="true" />
            </LinearLayout>
        </TableRow>

    </TableRow>

</TableLayout>