<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:layout_weight="0.45">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/diffeprouv"
            android:id="@+id/txtDiff" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cbDiff" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:weightSum="1"
        android:layout_weight="0.25">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/vilainOuvreur"
            android:id="@+id/txtOuv" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:id="@+id/cbOuvr" />

    </LinearLayout>

    <Button
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:text="@string/ConfirmationMDP"
        android:id="@+id/btnCritiquer"
        android:layout_gravity="center_horizontal"
        android:onClick="onClick"/>
</LinearLayout>