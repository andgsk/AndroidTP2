<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Terminer l&apos;inscription"
        android:id="@+id/textView"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/Nom"
        android:ems="10"
        android:id="@+id/txtNom"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Prenom"
        android:ems="10"
        android:id="@+id/txtPrenom"
        android:layout_below="@+id/txtNom"
        android:layout_alignLeft="@+id/txtNom"
        android:layout_alignStart="@+id/txtNom" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/txtNoCiv"
        android:layout_below="@+id/txtPrenom"
        android:layout_alignLeft="@+id/txtPrenom"
        android:layout_alignStart="@+id/txtPrenom"
        android:layout_marginTop="43dp"
        android:text="@string/NoCiv" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLogin"
        android:layout_below="@+id/txtNoCiv"
        android:layout_alignLeft="@+id/txtNoCiv"
        android:layout_alignStart="@+id/txtNoCiv"
        android:layout_alignRight="@+id/txtNoCiv"
        android:layout_alignEnd="@+id/txtNoCiv"
        android:text="@string/Rue" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtMDP"
        android:layout_below="@+id/txtLogin"
        android:layout_alignLeft="@+id/txtLogin"
        android:layout_alignStart="@+id/txtLogin"
        android:layout_alignRight="@+id/txtLogin"
        android:layout_alignEnd="@+id/txtLogin"
        android:text="@string/Ville" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/txtCodeP"
        android:layout_below="@+id/txtMDP"
        android:layout_alignLeft="@+id/txtMDP"
        android:layout_alignStart="@+id/txtMDP"
        android:text="@string/CodePostal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnIsncr"
        android:id="@+id/btnTerInscr"
        android:layout_alignTop="@+id/btnAnnuler"
        android:layout_alignLeft="@+id/txtCodeP"
        android:layout_alignStart="@+id/txtCodeP"
        android:onClick="onInscriptionTerminerClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Annuler"
        android:id="@+id/btnAnnuler"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/txtCodeP"
        android:layout_alignEnd="@+id/txtCodeP" />

</RelativeLayout>